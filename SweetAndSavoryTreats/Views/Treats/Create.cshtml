@{
  Layout = "_Layout";
}

@model SweetSavoryTreats.Models.Treat

<h4>Add a new Treat</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.Label("Select Flavor")
  @Html.DropDownList("FlavorId")
  <input type="submit" value="Add new Treat" class="btn btn-default"/>
}
<p>@Html.ActionLink("Show all Treats", "Index")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>