@{
  Layout = "_Layout";
}

@model SweetSavoryTreats.Models.Treat

<h2>Add a Flavor</h2>

<h4>Add a Flavor to this Treat: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.Label("Select Flavor")
  @Html.DropDownList("FlavorId")
  <br>
  <br>
  <input class="btn btn-default" type="submit" value="Save" />
  <p>@Html.ActionLink("Cancel", "Details", new {id=Model.TreatId})</p>
}
<div class="footer">
  <p>@Html.ActionLink("Back to Treats list", "Index")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>
