@{
  Layout = "_Layout";
}

@using SweetSavoryTreats.Models;
@model List<SweetSavoryTreats.Models.Flavor>;

<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No Flavors have been added yet!</h3>
} 

<ul>
  @foreach (Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.Title}", "Details", new { id = flavor.FlavorId })</li>
    <p>
      @Html.ActionLink("Edit", "Edit", new { id = flavor.FlavorId}) | 
      @Html.ActionLink("Delete", "Delete", new { id = flavor.FlavorId})
    </p>
  }
</ul>
<div class="footer">
  <p>@Html.ActionLink("Add new Flavor", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>
