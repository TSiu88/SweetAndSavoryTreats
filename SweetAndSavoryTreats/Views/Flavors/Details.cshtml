@{
  Layout = "_Layout";
}

@model SweetSavoryTreats.Models.Flavor;

<h2>Flavor Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Title): @Html.DisplayFor(model => model.Title)</h3>
<h4>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)</h4>

@if(@Model.Treats.Count == 0)
{
  <p>This Flavor does not contain any Treats</p>
}
else
{
  <h4>Treats the Flavor contains:</h4>
  <ul>
  @foreach(var join in Model.Treats)
  {
    <li>@join.Treat.Name</li>
  }
  </ul>
}
<div class="footer">
  @if(User.Identity.IsAuthenticated)
  {
    <p>@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })</p>
    <p>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</p>  
  }
  <p>@Html.ActionLink("Back to Flavors List", "Index")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>
