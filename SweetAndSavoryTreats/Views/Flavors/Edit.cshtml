@{
  Layout = "_Layout";
}

@model SweetSavoryTreats.Models.Flavor

<h2>Edit</h2>

<h4>Edit this Flavor: @Html.DisplayFor(model => model.Title)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.FlavorId)

    @Html.LabelFor(model => model.Title)
    @Html.EditorFor(model => model.Title)
    <br>
    <br>
    @Html.LabelFor(model => model.Description)
    @Html.TextAreaFor(model => model.Description)
    <br>
    <br>
    <input class="btn btn-default" type="submit" value="Save" />
    <p>@Html.ActionLink("Cancel", "Index")</p>
}
<div class="footer">
  <p>@Html.ActionLink("Back to Flavors List", "Index")</p>
</div>
